.plot_content
  %svg{width: 500, height: 200}
:javascript
  var dataset = [ 5, 10, 13, 19, 21, 25, 22, 18, 15, 13,
                      11, 12, 15, 20, 18, 17, 16, 18, 23, 25 ];
  var svg = d3.select("svg");
  var barPadding = 2;
  var h = 200;
  var w = 500;

  svg.selectAll("rect")
    .data(dataset)
    .enter()
    .append("rect")
    .attr("x", function(d, i) {
      return i * (w / dataset.length);
    })
    .attr("y", function(d) {
      return h-d * 4;
    })
    .attr("width", w / dataset.length - barPadding)
    .attr("height", function(d) {
      return 1000000;
    })
    .attr("fill", function(d) {
      return "rgb(40, 255, " + (d * 10) + ")";
    })

  svg.selectAll("text")
    .data(dataset)
    .enter()
    .append("text")
    .text(function(d) {
      return d;
    })
    .attr("x", function(d, i) {
      return i * (w / dataset.length) + (w / dataset.length - barPadding) / 2;
    })
    .attr("y", function(d) {
      return h - (d * 4) + 15;
    })
    .attr("text-anchor", "middle");
